/******************************************************************************
 *		Header File Containing TI - BoostXL  related Informations and
 *		Drivers (API's) Related to interact with sensors present in TI
 *		BoostXL sensors Evaluation board. This software is developed to
 *		Integrate BoostXL sensor Evaluation board with STM32L476RG Nucleo
 *		Development board.
 *
 *****************************************************************************/

#ifndef TIBOOSTXLSENSORS_SENSORS_H_
#define TIBOOSTXLSENSORS_SENSORS_H_

/******************************************************************************
 * Global Includes.
 *****************************************************************************/
#include <stdint.h>
#include <stdbool.h>
#include "stm32l476xx.h"
#include "stm32l4xx_hal.h"

/******************************************************************************
 * Macro Definitions.
 *****************************************************************************/

/******************************************************************************
 * Enum Definitions.
 *****************************************************************************/
/*
 * @brief: Enum Representing values from OPT3001 Light Sensor.
 */
typedef enum _eOpt3001Vals_
{
	eOpt3001Res = 0,
	eOpt3001MfId,
	eOpt3001DevId,
	eOpt3001Max
} eOpt3001Vals;

/*
 * @brief: Enum Representing values from BMI160 IMU Sensor Values.
 */
typedef enum _eBmi160ImuVals_
{
	eBmi160ChipId = 0,
	eBmi160MagX,
	eBmi160MagY,
	eBmi160MagZ,
	eBmi160GyrX,
	eBmi160GyrY,
	eBmi160GyrZ,
	eBmi160AccelX,
	eBmi160AccelY,
	eBmi160AccelZ,
	eBmi160Max
} eBmi160ImuVals;

/*
 * @brief: Enum Representing values from BMI160 IMU Sensor Values.
 */
typedef enum _eBmi160ImuVals_
{
	eBmi160ChipId = 0,
}

/******************************************************************************
 * Structure Definitions.
 *****************************************************************************/

/******************************************************************************
 * Function Declarations.
 *****************************************************************************/
void InitTiSensorBooster(void);
uint16_t GetOPT3001Vals(eOpt3001Vals eOpt3001Val);
uint16_t GetBMI160IMUVals(eBmi160ImuVals eBmi160Val);
uint16_t GetBME280Vals();


#endif /* TIBOOSTXLSENSORS_SENSORS_H_ */
